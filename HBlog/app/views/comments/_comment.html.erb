<% if comment.persisted? %>
  <p>
    <strong>Name:</strong>
    <%= comment.commenter %>
 <br>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>

  <p>
  <%= link_to 'Edit', edit_post_comment_path(@post, comment) %>
  <br>
  <%= link_to 'Delete Comment', [comment.post, comment],
               method: :delete,
               data: { confirm: 'Are you sure?' } %>

  </p>
<% end %>